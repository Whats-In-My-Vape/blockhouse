<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.wit.blockhouse">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application
      android:name=".main.MainApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.Launcher"
      android:fullBackupContent="@xml/backup_descriptor">
    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="@string/google_map_key" />

    <activity
        android:name=".views.auth.LoginView"
        android:label="@string/title_activity_login"
        android:launchMode="singleTop">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name=".views.blockhouseList.BlockhouseListView"
        android:label="@string/title_activity_blockhouse_list"
        android:launchMode="singleTop">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".views.blockhouseList.BlockhouseListView"/>
    </activity>
    <activity
        android:name=".views.blockhouse.BlockhouseView"
        android:label="@string/title_activity_blockhouse">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".views.blockhouseList.BlockhouseListView" />
    </activity>
    <activity
        android:name=".views.editLocation.EditLocationView"
        android:label="@string/title_activity_edit_location">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".views.blockhouse.BlockhouseView" />
    </activity>

    <activity
        android:name=".views.map.BlockhouseMapView"
        android:label="@string/title_activity_blockhouse_maps"
        android:launchMode="singleTop">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".views.blockhouseList.BlockhouseListView" />
    </activity>
  </application>

</manifest>